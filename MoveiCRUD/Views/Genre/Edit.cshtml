@model Genre
@{
    ViewData["Title"] = "Edit";
}

<h5 class="text-primary">Edit Genre</h5>
<hr />
<div class="row">
    <div class="card col-4">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div class="row">
                    <div class="col-10">
                        <input type="hidden" readonly asp-for="Id"/>

                        <label class="text-muted" asp-for="Name"></label>
                        <input class="form-control" type="text" asp-for="Name" maxlength="250" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="mt-4">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index">Cansel</a>
                </div>
            </form>

        </div>
    </div>
</div>