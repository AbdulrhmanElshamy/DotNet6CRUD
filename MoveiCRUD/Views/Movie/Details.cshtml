@model MovieFormViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="col-12">
    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-2 poster">
                <img class="img-fluid" src="~/uploads/@Model.ImgUrl" />
            </div>
            <div class="col-md-10 ">
                <div class="card-body d-flex flex-column justify-content-between h-100">
                    <div>
                        <h5 class="card-title">@Model.Title (@Model.year)</h5>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p class="card-text mb-0 mt-2">
                            <i class="bi bi-star-fill text-warning"></i>
                            <small class="text-muted">@Model.Rate.ToString("0.0")</small>
                        </p>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                                Edit
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="card mb-3">
    <div class="card-body">
        <div>
            <h5 class="card-title">Storytime</h5>
            <p class="card-text text-justify">@Model.StoreLine</p>
        </div>
    </div>
</div>
@section Scripts{
   
}